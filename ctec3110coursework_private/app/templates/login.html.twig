{% extends 'banner.html.twig' %}
{% block content %}


    <div class="d-flex justify-content-sm-center">

        <div class="card bg-light mb-3" style="max-width: 18rem;">
            <div class="card-body">

                <form action="{{ action }}" method="post">
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="user_name" name="user_name"
                                   value="{{ initial_input_box_value }}" placeholder="Username">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input type="password" class="form-control" id="password" name="password"
                                   value="{{ initial_input_box_value }}" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-primary btn-lg btn-block" value="Submit">Login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


{% endblock %}
