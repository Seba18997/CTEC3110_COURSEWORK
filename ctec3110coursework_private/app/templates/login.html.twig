{% extends 'banner.html.twig' %}
{% block content %}

    <br/>
    <form action="{{ action }}" method="post">
        <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="username" name="username" value="{{ initial_input_box_value }}" placeholder="Username">
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" id="password" name="password" value="{{ initial_input_box_value }}" placeholder="Password">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary" value="Submit">Login to view content</button>
            </div>
        </div>
    </form>

{% endblock %}
