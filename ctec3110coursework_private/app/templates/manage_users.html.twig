{% extends 'banner.html.twig' %}
{% block content %}
    <br/>

    <div class="table-responsive-sm table-bordered table-hover">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col">Date</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for user_data in users_data %}
                <tr>
                    <form action="{{ action }}" method={{ method }}>
                        <td><input type="db" class="form-control" id="id" name="id" value="{{ user_data.id }}">
                        </td>
                        <td><input type="db" class="form-control" id="username" name="username"
                                   value="{{ user_data.username }}"></td>
                        <td><input type="db" class="form-control" id="email" name="email"
                                   value="{{ user_data.email }}"></td>
                        <td><input type="db" class="form-control" id="role" name="role"
                                   value="{{ user_data.role }}"></td>
                        <td>{{ user_data.date }}</td>
                        <td>

                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-primary btn-lg btn-block" value="Submit">
                                    Save
                                </button>
                            </div>
                    </form>

                    </td>
                </tr>
            {% endfor %}</tbody>
        </table>

    </div>




{% endblock %}