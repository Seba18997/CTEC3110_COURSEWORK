{% extends 'banner.html.twig' %}
{% block content %}
    <div class="table-responsive-sm table-hover">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Date</th>
                <th scope="col">Type</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for logdata in logsdata %}
                <tr>
                    <td>{{ logdata.id }}</td>
                    <td>{{ logdata.date }} {{ logdata.hour }}</td>
                    <td>{{ logdata.type }}</td>
                    <td>{{ logdata.action }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

